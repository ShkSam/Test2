<Page x:Class="test.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock HorizontalAlignment="Center" FontSize="24" TextDecorations="Underline" FontStyle="Italic" Margin="5">Авторизация</TextBlock>
            <TextBlock Margin="5">Логин:</TextBlock>
            <TextBox Name="LoginBox"></TextBox>
            <TextBlock Margin="5">Пароль:</TextBlock>
            <TextBox Name="PassBox"></TextBox>

            <Button Margin="5" Width="70" Click="RandBtnClick">Капча</Button>
            <TextBlock x:Name="RandCapha" HorizontalAlignment="Center" Width="80" TextAlignment="Center"></TextBlock>
            <TextBox x:Name="Answer" Margin="5" Width="80" TextAlignment="Center"></TextBox>

            <Button Width="70" Click="LoginBtnClick">Войти</Button>
            <Button Margin="5" Width="120" Click="RegBtnClick">Регистрация</Button>
        </StackPanel>
    </Grid>
</Page>
