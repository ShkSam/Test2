<Page x:Class="test.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel>
            <TextBlock>Регистрация</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox Text="{Binding Логин}"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <TextBox Text="{Binding Пароль}"></TextBox>
            <Button Click="RegBtnClick">Зарегистрировать</Button>
            <Button Click="BackBtnClick">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
